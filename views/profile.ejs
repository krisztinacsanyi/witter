<!DOCTYPE html>
<html>

<%- include('head', {title: `Profile of ${user.username}` }) %>

<body>
    <% if (typeof user !=='undefined'){%>
        <%- include('navbar-loggedin') %>
    <%} else {%>
        <%- include('navbar-simple') %>
    <%}%>
    <div class="columns my-5 mx-auto mt-0" style="max-width: 800px;">
        <div class="column is-one-fifths">
            <figure class="image is-128x128">
                <% if (user.profilepic=='' ) { %>
                    <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
                <% } else { %>
                    <img src="/uploads/<%=user.profilepic %>" alt="Placeholder image">
                <% } %>
            </figure>
        </div>
        <div class="column is-three-fifths">
            <p class="title is-1"><%= user.username %></p>
        </div>
    </div>
    <div class="columns my-5 mx-auto mt-0" style="max-width: 800px;">
        <div class="column">
            <% for (let i = 0; i < posts.length;i++){ %>
                <%- include('card', {showUser: false, post: posts[i]}) %>
            <% } %>
        </div>
    </div>
</body>

</html>