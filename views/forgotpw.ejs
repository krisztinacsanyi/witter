<!DOCTYPE html>
<html>
<%- include('head', {title: 'Forgot password' }) %>

    <body>
        <%- include('navbar-simple') %>
            <form action="/forgotpw" method="post">
                <div class="columns my-5 mx-auto mt-0" style="max-width: 800px;">
                    <div class="column has-text-centered">
                        <% if (typeof errors !=='undefined' && errors.includes('User not found')) { %>
                            <article class="message is-danger">
                                <div class="message-body">
                                    User not found with this username.
                                </div>
                            </article>
                        <% } %>
                        <% if (typeof resetlink !=='undefined') { %>
                            <article class="message is-success">
                                <div class="message-body">
                                    Copy and paste to change your password: <%- resetlink %>
                                </div>
                            </article>
                        <% } %>
                        <p class="title is-2 is-spaced">Forgot password?</p>
                        <p class="subtitle is-5">Enter your username and you'll receive instructions in e-mail how to change your password.</p>
                        <div class="field">
                            <label class="label">Username</label>
                            <div class="control has-icons-left has-icons-right">
                                <input class="input" type="text" name="username" id="username" placeholder="Text input" required>
                                <span class="icon is-small is-left">
                                    <span class="material-symbols-outlined">
                                        person
                                    </span>
                                </span>
                                <span class="icon is-small is-right">
                                    <i class="fas fa-check"></i>
                                </span>
                            </div>
                        </div>
                        <div class="field is-grouped mx-auto my-5">
                            <div class="control mx-auto" style="width: 200px;">
                                <input type="submit" class="button is-link is-fullwidth" value="Confirm" />
                            </div>
                        </div>
                        <div class="field is-grouped mx-auto my-5">
                            <div class="control mx-auto" style="width: 200px;">
                                <a href="/login" class="button is-link is-light is-fullwidth">Back to login</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
    </body>

</html>